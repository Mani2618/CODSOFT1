import random
import time
from colorama import init, Fore, Style

# Initialize colorama
init(autoreset=True)

def start_game():
    print(Fore.CYAN + Style.BRIGHT + "\nðŸŽ® Welcome to Rock-Paper-Scissors by Manaswitha ðŸŽ®\n")
    choices = ['rock', 'paper', 'scissors']
    player_score = 0
    computer_score = 0
    round_num = 1

    while True:
        print(Fore.YELLOW + f"\nðŸ” Round {round_num}")
        user_pick = input(Fore.GREEN + "ðŸ‘‰ Choose [rock/paper/scissors] or type 'exit' to quit: ").lower().strip()

        if user_pick == 'exit':
            print(Fore.LIGHTMAGENTA_EX + "\nðŸ‘‹ Exiting the game... Thank you for playing!\n")
            break

        if user_pick not in choices:
            print(Fore.RED + "âŒ Invalid choice. Please enter rock, paper, or scissors.")
            continue

        computer_pick = random.choice(choices)
        print(Fore.LIGHTBLUE_EX + f"ðŸ¤– Computer chose: {computer_pick}")
        time.sleep(0.5)

        if user_pick == computer_pick:
            print(Fore.LIGHTYELLOW_EX + "ðŸ˜ It's a draw!")
        elif (
            (user_pick == 'rock' and computer_pick == 'scissors') or
            (user_pick == 'scissors' and computer_pick == 'paper') or
            (user_pick == 'paper' and computer_pick == 'rock')
        ):
            print(Fore.GREEN + "âœ… You win this round!")
            player_score += 1
        else:
            print(Fore.RED + "âŒ Computer wins this round!")
            computer_score += 1

        print(Fore.LIGHTCYAN_EX + f"ðŸ“Š Scoreboard: You {player_score} | Computer {computer_score}")
        round_num += 1

    # Final results
    print(Fore.MAGENTA + "\nðŸ Final Results:")
    print(Fore.CYAN + f"ðŸŽ¯ You: {player_score} | ðŸ’» Computer: {computer_score}")
    print(Fore.WHITE + "-" * 40)

    if player_score > computer_score:
        print(Fore.GREEN + Style.BRIGHT + "ðŸŽ‰ Congratulations! You are the final winner!")
    elif player_score < computer_score:
        print(Fore.RED + Style.BRIGHT + "ðŸ’» Computer wins overall. Better luck next time!")
    else:
        print(Fore.YELLOW + Style.BRIGHT + "âš–ï¸ It was a tie overall!")

if __name__ == "__main__":
    start_game()
